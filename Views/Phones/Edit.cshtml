@model MobileShop.Models.Phone

@{
    ViewData["Title"] = "Edit";
}
<!--Text-align center to h1 & h4-->
<h1 style="text-align:center;">Edit</h1>

<h4 style="text-align:center;">Phone</h4>
<hr />
<div class="row" style="background-color:lightcyan; padding-left:300px; padding-right:300px; ">
    <div class="col-md-4" style="padding-left:300px;  padding-right:300px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhoneId" />
            <div class="form-group">
                <label asp-for="NameOfPhone" class="control-label"></label>
                <input asp-for="NameOfPhone" class="form-control" />
                <span asp-validation-for="NameOfPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
