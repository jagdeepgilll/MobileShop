@model MobileShop.Models.Repair

@{
    ViewData["Title"] = "Edit";
}
<!--Text-align center to h1 & h4-->
<h1 style="text-align:center;">Edit</h1>

<h4 style="text-align:center;">Repair</h4>
<hr />
<div class="row" style="padding-left:300px;  padding-right:300px;">
    <!-- holds backgroundcolor-->
    <div class="col-md-4" style="background-color:lightcyan; padding-left:300px;  padding-right:300px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ConfigrationId" class="control-label"></label>
                <input asp-for="ConfigrationId" class="form-control" />
                <span asp-validation-for="ConfigrationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefectInPhone" class="control-label"></label>
                <input asp-for="DefectInPhone" class="form-control" />
                <span asp-validation-for="DefectInPhone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRepairable" /> @Html.DisplayNameFor(model => model.IsRepairable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RepairDate" class="control-label"></label>
                <input asp-for="RepairDate" class="form-control" />
                <span asp-validation-for="RepairDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
